# Docker Environment Configuration for TestCase AI Agent
# Copy this file to .env and update the values as needed

# Required API Keys - MUST be set
GOOGLE_API_KEY=your_gemini_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Gemini Model Configuration
GEMINI_MODEL_NAME=gemini-1.5-pro
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Processing Configuration
MAX_DOCUMENT_SIZE_MB=50
MAX_CONCURRENT_DOCUMENTS=5
PROCESSING_TIMEOUT_SECONDS=3600
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# File Processing - Docker paths
TEMP_DIRECTORY=/tmp/testcase_ai
OUTPUT_DIRECTORY=/app/output

# Quality Thresholds
MIN_COMPLETENESS_SCORE=0.8
MIN_ACCURACY_SCORE=0.85
MIN_TRACEABILITY_SCORE=0.9
MIN_COMPLIANCE_SCORE=0.95

# Test Case Generation
DEFAULT_TEST_CASE_PRIORITY=medium
MAX_TEST_CASES_PER_REQUIREMENT=10
INCLUDE_NEGATIVE_TEST_CASES=true
INCLUDE_EDGE_CASES=true

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_SESSION_MEMORY_SIZE=100
ENABLE_SESSION_PERSISTENCE=true

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true
LOG_FILE_PATH=

# Performance and Scaling
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_PARALLEL_PROCESSING=true
MAX_WORKER_THREADS=4

# Security
ENABLE_INPUT_VALIDATION=true
ENABLE_OUTPUT_SANITIZATION=true
MAX_INPUT_LENGTH=1000000

# Development and Debug
DEBUG_MODE=false
ENABLE_DETAILED_LOGGING=false
MOCK_EXTERNAL_APIS=false

# Toolchain Integration (Optional)
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

AZURE_DEVOPS_ORG=
AZURE_DEVOPS_PROJECT=
AZURE_DEVOPS_TOKEN=

POLARION_URL=
POLARION_USERNAME=
POLARION_PASSWORD=
